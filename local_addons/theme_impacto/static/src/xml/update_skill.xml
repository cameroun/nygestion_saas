<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">


<t t-name="theme_impacto.update_skill_modal">
    <div class="modal" contenteditable="False" contentEditable="false" backdrop="false" tabindex="1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="z-index:2001">
        <div class="modal-dialog">
            <div id="s_media_block_modal" class="modal-content">
                <div class="modal-body" contenteditable="false">
                        <form class="form-horizontal container-fluid" role="form">
                            <div class="col-sm-12 form-group">
                                <label for="progress-width" class="col-sm-5 control-label">Chart Per</label>
                                <div class="col-sm-7">
                                    <input type="number" min="1" max="100" class="form-control" id="chart_per" />
                                </div>
                            </div>
                            <div class="col-sm-12 form-group">
                                <label for="progress-width" class="col-sm-5 control-label">Chart Width</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="chart_width" />
                                </div>
                            </div>
                            <div class="col-sm-12 form-group">
                                <label for="progress-width" class="col-sm-5 control-label">Chart Color</label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="chart_color" />
                                </div>
                            </div>
                              <div class="col-sm-12 form-group">
                               <strong>Notes: </strong> You can see updated data after Save Page
                              </div>
                        </form>
                </div>
                <div class="modal-footer">
                    <button id="cancel" data-dismiss="modal" class="btn btn-primary">Cancel</button>
                    <button id="sub_data" data-dismiss="modal" class="btn btn-danger">Apply</button>
                </div>
            </div>
        </div>
    </div>
 </t>
</templates>

